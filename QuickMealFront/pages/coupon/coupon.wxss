.page {
  height: 100vh;
  background: #f6f7fb;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 120rpx 20rpx 20rpx;
  background: #ffffff;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.back-button {
  position: absolute;
  top: 115rpx;
  left: 20rpx;
  z-index: 999;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.03);
}

.filter-option {
  font-size: 26rpx;
  color: #666;
  margin: 0 10rpx;
  padding: 0;
  line-height: 1;
  border: none;
}

.filter-option.active {
  color: #34C759; /* 主色调 */
  font-weight: 600;
  border-bottom: 4rpx solid #34C759; /* 主色调 */
}

.content-wrapper {
  flex: 1;
}

.container {
  padding: 20rpx;
}

.coupon-box {
  display: flex;
  background: linear-gradient(135deg, #E8F5E9, #A5D6A7); /* 背景渐变 */
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.left-part {
  width: 200rpx;
  background: #A5D6A7; /* 辅助色调 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 10rpx;
}

.amount {
  font-size: 42rpx;
  font-weight: bold;
  color: #388E3C; /* 深绿色 */
}

.condition {
  font-size: 24rpx;
  color: #689F7C; /* 较浅的绿色 */
  margin-top: 10rpx;
}

.right-part {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.tag {
  background: #ccc;
  color: white;
  padding: 6rpx 14rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.expiry {
  font-size: 24rpx;
  color: #999;
}

.btns {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
  flex-wrap: wrap;
}

.btn {
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-weight: bold;
  min-width: 180rpx;
  text-align: center;
}

.receive {
  background-color: #34C759;
}

.use {
  background-color: #43A047;
}

.disabled {
  background-color: #BBB;
  color: #EEE;
}

.expired {
  opacity: 0.5;
}