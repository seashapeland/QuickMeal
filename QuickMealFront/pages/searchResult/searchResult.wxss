.searchResult-page {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;           /* 背景图置底 */
}

/* 顶部导航区域 */
.search-header {
  display: flex;
  flex-direction: column; /* 改为竖排 */
  margin-bottom: 20rpx;
}

/* 返回按钮单独一行左对齐 */
.back-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 80rpx;
}

/* 搜索框区域 */
.search-box {
  width: 90%;
  margin-top: 50rpx;
  margin-left: 20rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 输入框 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 搜索按钮 */
.search-btn {
  font-size: 28rpx;
  color: #666;
  padding-left: 20rpx;
  border-left: 2rpx solid green;
}

.search-result {
  height: 100vh;
  margin-top: 30rpx;
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}