.searchResult-page {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;           /* 背景图置底 */
}

/* 顶部导航区域 */
.search-header {
  display: flex;
  flex-direction: column; /* 改为竖排 */
  margin-bottom: 20rpx;
}

/* 返回按钮单独一行左对齐 */
.back-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-top: 80rpx;
}

/* 搜索框区域 */
.search-box {
  width: 90%;
  margin-top: 50rpx;
  margin-left: 20rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 输入框 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

/* 搜索按钮 */
.search-btn {
  font-size: 28rpx;
  color: #666;
  padding-left: 20rpx;
  border-left: 2rpx solid green;
}

.search-result {
  height: calc(100vh - 305rpx);
  margin-top: 30rpx;
  padding-top: 30rpx;
  background-color: #ffffff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  overflow: auto;
}

.result-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 28rpx;
  transition: transform 0.2s ease;
  border-bottom: 1rpx solid #eee;
}


.card-img {
  width: 200rpx;
  height: 160rpx;
  object-fit: cover;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.card-info {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-title {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 6rpx;
}

.card-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin: 6rpx 0 10rpx;
}

.card-price {
  font-size: 34rpx;
  color: #e64340;
  font-weight: bold;
}

.original-price {
  font-size: 26rpx;
  margin-left: 14rpx;
  text-decoration: line-through;
  color: #999;
}

.card-desc {
  font-size: 26rpx;
  color: #777;
  line-height: 1.5;
}

.empty-hint {
  text-align: center;
  margin-top: 120rpx;
  color: #bbb;
  font-size: 28rpx;
}