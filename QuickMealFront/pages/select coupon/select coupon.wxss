.navbar {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 水平两端对齐 */
  height: 130rpx; /* 增加导航栏高度 */
  padding: 10rpx 30rpx;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.navbar-back {
  width: 44rpx;
  height: 44rpx;
  position: absolute; /* 绝对定位 */
  left: 30rpx; /* 距离左侧30rpx */
  bottom: 10rpx; /* 距离底部10rpx */
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 调整水平居中 */
  bottom: 10rpx; /* 距离底部10rpx */
}

.page {
  height: 100vh;
  background: #f6f7fb;
  display: flex;
  flex-direction: column;
}



.content-wrapper {
  flex: 1;
  height: calc(100vh - 170rpx);
}

.container {
  height: 100vh; /* 确保容器继承正确高度 */
  padding: 20rpx;
  
}

/* 新增：不使用优惠券样式 */
.no-coupon {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #56a045;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
}
.coupon-box {
  display: flex;
  background: linear-gradient(135deg, #E8F5E9, #A5D6A7);
  border-radius: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.left-part {
  width: 200rpx;
  background: #A5D6A7;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 10rpx;
}

.amount {
  font-size: 42rpx;
  font-weight: bold;
  color: #388E3C;
}

.condition {
  font-size: 24rpx;
  color: #689F7C;
  margin-top: 10rpx;
}

.right-part {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.tag {
  background: #ccc;
  color: white;
  padding: 6rpx 14rpx;
  font-size: 20rpx;
  border-radius: 20rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  margin: 10rpx 0;
}

.expiry {
  font-size: 24rpx;
  color: #999;
}

.weekdays {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.btns {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
  flex-wrap: wrap;
}

.btn {
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-weight: bold;
  min-width: 180rpx;
  text-align: center;
}

.use {
  background-color: #43A047; /* 改为与订单页一致的主色调 */
}

.disabled {
  background-color: #BBB;
  color: #EEE;
}

.expired {
  opacity: 0.5;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
}