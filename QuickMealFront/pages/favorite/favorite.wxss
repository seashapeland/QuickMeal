.navbar {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 水平两端对齐 */
  height: 130rpx; /* 增加导航栏高度 */
  padding: 10rpx 30rpx;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.navbar-back {
  width: 44rpx;
  height: 44rpx;
  position: absolute; /* 绝对定位 */
  left: 30rpx; /* 距离左侧30rpx */
  bottom: 10rpx; /* 距离底部10rpx */
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 调整水平居中 */
  bottom: 10rpx; /* 距离底部10rpx */
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.scroll-wrapper {
  width: 100%;
  height: calc(100vh - 170rpx); /* 保留你已有高度逻辑 */
  overflow: scroll;
}

.container {
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.card-left {
  display: flex;
  flex: 1;
  align-items: center;
}

.card-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #999999;
}

.cancel-btn {
  padding: 10rpx 24rpx;
  background-color: #60b04e;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}



/* 空状态提示 */
.empty-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #999999;
}