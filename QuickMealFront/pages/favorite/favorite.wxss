.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.header {
  display: flex;
  align-items: center;
  padding: 120rpx 20rpx 20rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
}

.back-button {
  position: absolute;
  top: 115rpx;
  left: 20rpx;
  z-index: 999;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.content-wrapper {
  flex: 1;
  overflow: hidden;
}

.container {
  padding: 30rpx 20rpx;
}

.card-wrapper {
  position: relative;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.favorite-card {
  display: flex;
  background: linear-gradient(to right, #fefefe, #f3f3f3);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  transition: transform 0.3s;
}

.card-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  transition: transform 0.3s;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 28rpx;
  color: #888;
}

.delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background-color: #ff4d4f;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
