.navbar {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 水平两端对齐 */
  height: 130rpx; /* 增加导航栏高度 */
  padding: 10rpx 30rpx;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.navbar-back {
  width: 44rpx;
  height: 44rpx;
  position: absolute; /* 绝对定位 */
  left: 30rpx; /* 距离左侧30rpx */
  bottom: 10rpx; /* 距离底部10rpx */
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 调整水平居中 */
  bottom: 10rpx; /* 距离底部10rpx */
}

.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.content-wrapper {
  flex: 1;
  overflow: hidden;
}

.container {
  padding: 30rpx 20rpx;
}

.faq-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.faq-question {
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #333333;
}

.avatar-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.update-button-wrapper {
  display: flex;
  justify-content: center;
}

.update-button {
  background-color: #6eb04c;
  color: white;
  font-size: 32rpx;
  padding: 16rpx 60rpx;
  border-radius: 60rpx;
  margin-top: 30rpx;
}

.logout-button-wrapper {
  display: flex;
  justify-content: center;
}

.logout-button {
  border: 2rpx solid #6eb04c;
  color: #6eb04c;
  background-color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 60rpx;
  margin-top: 30rpx;
}
