.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20px;
  background-color: #ffffff;
  margin: 0;
}

.top-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10vh;
}

.logo {
  width: 140px;
  height: 140px;
  margin-bottom: 40px;
}

.form {
  width: 100%;
  max-width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  margin-left: 10px;
}

.input-group {
  width: 100%;
  margin-bottom: 20px;
}

.input {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 24px;
  font-size: 15px;
  background-color: #f9f9f9;
  box-shadow: inset 0 1px 2px rgba(0,0,0,0.05);
  transition: all 0.2s ease;
}
.login-btn {
  width: 100%;
  padding: 13px;
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  background: linear-gradient(to right, #3b7e57, #5fc69b);
  border: none;
  border-radius: 26px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  margin-top: 20px;
  transition: background 0.3s;
  align-self: center;
  transform: translateX(17px);
}
.wechat-login {
  font-size: 14px;
  color: #1AAD19;
  text-decoration: underline;
  margin-top: 15px;
  cursor: pointer;
  align-self: center;
  transform: translateX(16px);
}
.agreement {
  width: 100%;
  font-size: 12px;
  color: #666;
  text-align: center;
  line-height: 1.6;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}
.agreement checkbox {
  margin-right: 5px;
}
.link {
  color: #3b7e57;
  text-decoration: underline;
  margin: 0 2px;
}