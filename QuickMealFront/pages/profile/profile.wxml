<!--pages/profile/profile.wxml-->
<view class="profile-container">
  <!-- 个人信息区域 -->
  <view class="user-info">
    <image class="avatar" src="/images/avatar.jpg" />
    <view class="user-details">
      <text class="username">曲辰</text>
      <text class="phone">138****5678</text>
    </view>
  </view>

  <!-- 常用服务标题 -->
  <view class="section-title">
    <text>常用服务</text>
  </view>

  <!-- 常用功能 -->
  <view class="function-list">
    <view class="function-item" bindtap="goToOrder">
      <image class="icon" src="/images/order.png" />
      <text>我的订单</text>
    </view>
    <view class="function-item" bindtap="goToFavorite">
      <image class="icon" src="/images/favorite.png" />
      <text>我的收藏</text>
    </view>
    <view class="function-item" bindtap="goToCoupon">
      <image class="icon" src="/images/coupon.png" />
      <text>优惠券</text>
    </view>
    <view class="function-item" bindtap="goToFeedback">
      <image class="icon" src="/images/feedback.png" />
      <text>投诉与建议</text>
    </view>
  </view>

  <!-- 其他服务标题 -->
  <view class="section-title">
    <text>其他服务</text>
  </view>

  <!-- 其他服务 -->
  <view class="service-list">
    <view class="service-item" bindtap="goToAccount">
      <image class="icon" src="/images/account.png" />
      <text>账号管理</text>
    </view>
    <view class="service-item" bindtap="goToQuestion">
      <image class="icon" src="/images/question.png" />
      <text>常见问题</text>
    </view>
    <view class="service-item" bindtap="goToPrivacy">
      <image class="icon" src="/images/privacy.png" />
      <text>隐私政策</text>
    </view>
  </view>
</view>
