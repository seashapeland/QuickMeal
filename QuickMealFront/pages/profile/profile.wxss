/* 新增整体下移样式 */
.content-container {
  padding-top: 45rpx;
}

.container {
  background-color: white;
  padding: 20rpx;
}

.user-section {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.avatar {
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
}

.feature-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

/* 我的功能部分的图标 */
.my-function-icon {
  width: 90rpx; /* 统一图标宽度 */
  height: 90rpx; /* 统一图标高度 */
  margin-bottom: 10rpx;
}

/* 账号管理部分的图标 */
.account-icon {
  width: 70rpx; /* 账号管理图标宽度 */
  height: 70rpx; /* 账号管理图标高度 */
  margin-bottom: 10rpx;
}

.dishes-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.dish-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.dish-image {
  width: 100%;
  height: 295rpx;
  border-radius: 10rpx;
}

.dish-name {
  display: block;
  text-align: center;
  font-size: 28rpx;
  margin-top: 10rpx;
}