/* 自定义导航栏 */
.navbar {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 水平两端对齐 */
  height: 130rpx; /* 增加导航栏高度 */
  padding: 10rpx 30rpx;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.navbar-back {
  width: 44rpx;
  height: 44rpx;
  position: absolute; /* 绝对定位 */
  left: 30rpx; /* 距离左侧30rpx */
  bottom: 10rpx; /* 距离底部10rpx */
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 调整水平居中 */
  bottom: 10rpx; /* 距离底部10rpx */
}

.dish-detail-page {
  background-color: #f4f4f4;
  width: 100%;
  height: calc(100vh - 150rpx); /* 保留你已有高度逻辑 */
  overflow: scroll;
}

/* 外层卡片容器 */
.dish-card {
  background-color: #fff;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 100%;
  height: 500rpx;
  object-fit: cover;
}

/* 菜品信息区 */
.dish-info {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

/* 标题 + 收藏 */
.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}

.favorite-icon {
  width: 56rpx;
  height: 56rpx;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-img {
  width: 56rpx;
  height: 56rpx;
}

/* 横向排布价格 */
.price-row {
  display: flex;
  align-items: baseline;
  margin-top: 10rpx;
}

/* 当前价格 */
.dish-price {
  font-size: 40rpx;
  font-weight: 600;
  color: #e64340;
}

/* 原价（划线） */
.original-price {
  color: #999;
  font-size: 28rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}


/* 描述在最下方柔和 */
.dish-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 20rpx;
}

.package-detail {
  padding: 32rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.section-title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.package-summary {
  font-size: 28rpx;
  color: #444;
  margin-bottom: 20rpx;
  display: block;
  line-height: 40rpx;
  padding-left: 18rpx;
}

/* 每个套餐菜品卡片 */
.item-card {
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 16rpx;
  padding: 16rpx;
  border-radius: 16rpx;
}

.item-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.item-name {
  font-weight: bold;
  font-size: 30rpx;
}

.item-price {
  color: #e64545;
  font-size: 28rpx;
}

.item-qty {
  color: #888;
  font-size: 26rpx;
}


/* 星星图标统一大小 */
.star-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}

.review-section {
  background-color: #fff;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

/* 标题 */
.review-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-top: 24rpx;
  margin-left: 24rpx;
}

/* 平均评分行：数字 + 星星 */
.review-summary {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 30rpx;
}

.score-stars {
  display: flex;
  align-items: center;
}


.average-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffa726;
  margin-right: 20rpx;
  margin-left: 50rpx;
  margin-bottom: 20rpx;
}

.stars {
  display: flex;
}

.rate-button {
  font-size: 28rpx;
  color: #00b386;
  padding: 8rpx 20rpx;
  border: 2rpx solid #00b386;
  border-radius: 999rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

/* 单条评价卡片 */
.review-card {
  margin-bottom: 32rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}

.review-header {
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 10rpx;
  flex-shrink: 0;
}

.review-main {
  flex: 1;
  display: flex;
  flex-direction: column;
}


.nickname-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 24rpx;
  margin-right: 20rpx;
  color: #999;
}

/* 内容和 reviewer 主体一起对齐 */
.review-content {
  margin-top: 16rpx;
  font-size: 28rpx;
  padding-left: 100rpx;
  padding-right: 20rpx;
  color: #444;
  line-height: 1.6;
  word-break: break-word;
}

.divider {
  position: relative;
  text-align: center;
}


.divider-text {
  position: relative;
  display: inline-block;
  z-index: 2;
  color: #999;
  font-size: 28rpx;
}