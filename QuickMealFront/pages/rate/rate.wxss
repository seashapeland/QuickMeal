.navbar {
  display: flex;
  align-items: center; /* 垂直居中对齐 */
  justify-content: space-between; /* 水平两端对齐 */
  height: 130rpx; /* 增加导航栏高度 */
  padding: 10rpx 30rpx;
  position: relative;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.navbar-back {
  width: 44rpx;
  height: 44rpx;
  position: absolute; /* 绝对定位 */
  left: 30rpx; /* 距离左侧30rpx */
  bottom: 10rpx; /* 距离底部10rpx */
}

.navbar-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute; /* 绝对定位 */
  left: 50%; /* 水平居中 */
  transform: translateX(-50%); /* 调整水平居中 */
  bottom: 10rpx; /* 距离底部10rpx */
}

.rate-page {
  padding: 32rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}



.dish-card {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dish-img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.dish-desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}

.stars-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.label {
  font-size: 30rpx;
  margin-right: 20rpx;
  color: #333;
}

.stars {
  display: flex;
}

.star {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.textarea-section {
  margin-bottom: 40rpx;
}

.textarea {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  line-height: 1.6;
  min-height: 180rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.submit-section {
  display: flex;
  justify-content: center;
}

.submit-btn {
  width: 80%;
  background-color: #60b04e;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  padding: 16rpx 0;
}
