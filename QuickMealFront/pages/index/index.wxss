.container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;           /* 背景图置底 */
}

.nav-bar {
  display: flex;
  align-items: center;
  padding: 80rpx 20rpx 20rpx;
}

.logo-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.search-scan-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.search-box {
  flex: 1;
  display: flex;
  height: 48rpx;        
  align-items: center;
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 999rpx; /* 左右半圆，胶囊效果 */
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.placeholder {
  margin-left: 10rpx;
  font-size: 26rpx;
}

/* 外部容器：纵向排列图标 + 文字 */
.scan-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20rpx;
}

/* 原样保留（图标按钮） */
.scan-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: #e6f5ec;
  border-radius: 12rpx;
  border: 3rpx solid #00b386;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 图标图片 */
.scan-img {
  width: 40rpx;
  height: 40rpx;
}

/* 下方文字说明 */
.scan-text {
  font-size: 22rpx;
  color: #008b69;
  font-weight: bold;
  margin-top: 8rpx;
}

.menu-section {
  height: 1500rpx;
  background-color: rgb(248, 248, 248);         /* 淡灰背景 */
  border-top-left-radius: 20rpx;     /* 左上圆角 */
  border-top-right-radius: 20rpx;    /* 右上圆角 */
  margin-top: 20rpx;
 
}

.tab-bar {
  display: flex;
  padding: 16rpx 20rpx;   /* 上下加宽一点更舒适 */
  background-color: transparent;
}

.tab {
  margin-right: 36rpx;
  font-size: 32rpx;        /* 字体调大 */
  color: #666;
  padding-bottom: 6rpx;    /* 保证底部线不挤 */
  transition: all 0.2s ease;
}

.tab.selected {
  font-weight: 600;                        /* 中等加粗 */
  color: #000000;                          /* 更鲜明的主题色 */
  border-bottom: 6rpx solid #00b386;       /* 更粗显眼 */
}

.dish-list {
  width: 100%;
  height: calc(100vh - 370rpx); /* 保留你已有高度逻辑 */
  overflow: scroll;
}

/* 新增：两列网格容器 */
.dish-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 20rpx;
}

/* 每道菜封装成卡片样式 */
.dish-item {
  width: 49%; /* 一行两个卡片，中间留空 */
  box-sizing: border-box;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.2s;

}


/* 图片设置为圆角 + 固定宽高 */
.dish-img {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);  /* 添加阴影 */
}

/* 文本信息居中 */
.dish-info {
  text-align: center;
}

.dish-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.price-line {
  display: flex;
  justify-content: center;
  align-items: baseline;
}

.dish-price {
  color: #e64545;
  font-size: 30rpx;
  font-weight: bold;
}

.original-price {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
}


