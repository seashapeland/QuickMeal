<view class="navbar">
  <image src="/icons/return.png" class="navbar-back" bindtap="goBack"></image>
  <view class="navbar-title">投诉与建议</view>
</view>

<view class="page">
  <scroll-view scroll-y class="content-wrapper">
    <view class="container">
      <view class="faq-card">
        <view class="faq-question">请留下您的宝贵意见</view>
        <view class="faq-answer">我们重视您的反馈，将不断优化服务体验。</view>
      </view>

      <view class="faq-card input-card">
        <textarea
          placeholder="请输入您的投诉或建议..."
          class="input-area"
          maxlength="300"
          bindinput="handleInput"
          auto-height
        />
      </view>

      <view class="submit-btn" bindtap="submitFeedback">提交</view>
    </view>
  </scroll-view>
</view>
