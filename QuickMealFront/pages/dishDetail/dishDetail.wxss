.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  font-family: 'Roboto', sans-serif; /* 使用现代字体 */
}

.header {
  display: flex;
  align-items: center;
  padding: 120rpx 20rpx 20rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
  justify-content: space-between;
}

.back-button {
  position: absolute;
  top: 115rpx;
  left: 20rpx;
  z-index: 999;
}

.back-icon {
  width: 60rpx;
  height: 60rpx;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.content-wrapper {
  flex: 1;
  overflow: auto;
  padding: 20rpx;
}

.container {
  padding: 30rpx 20rpx;
}

.card-wrapper {
  position: relative;
  overflow: hidden;
  margin-bottom: 40rpx; /* 增加间距 */
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx; /* 增大圆角 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 增大阴影 */
  display: flex;
  flex-direction: column; /* 调整为垂直布局 */
}

.card-image {
  width: 600rpx; /* 增大图片尺寸 */
  height: 600rpx;
  border-radius: 10rpx; /* 增大圆角 */
  margin-bottom: 1rpx; /* 增加图片与文字的间距 */
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 20rpx; /* 调整内边距 */
}

.card-title {
  font-size: 40rpx; /* 增大字体大小 */
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  text-align: center; /* 菜名居中 */
}

.card-desc {
  font-size: 32rpx; /* 增大字体大小 */
  color: #666;
  margin-bottom: 15rpx;
}

.favorite-button {
  background-color: #ff8800; /* 使用更鲜艳的颜色 */
  color: white;
  padding: 15rpx;
  border-radius: 12rpx; /* 增大圆角 */
  cursor: pointer;
  margin-top: 20rpx;
  font-size: 30rpx; /* 增大字体大小 */
}

.price-info {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx; /* 增大圆角 */
  box-shadow: 0 4rpx 10rpx rgba(0 ,0, 0, 0.1); /* 增大阴影 */
}

.price-rule {
  font-size: 32rpx; /* 增大字体大小 */
  color: #333;
  margin-bottom: 15rpx;
}